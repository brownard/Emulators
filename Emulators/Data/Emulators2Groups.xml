<Groups>
  <Group title="Favourites" favourite="true" sort="DEFAULT" desc="False" layout="-1">
    <item type="SQL">      
      <where><![CDATA[favourite=1]]></where>
      <orderby><![CDATA[LOWER(title), title]]></orderby>
    </item>
  </Group>
  <Group title="Emulators" sort="DEFAULT" desc="False" layout="-1">
    <item type="Emulator">-2</item>
  </Group>
  <Group title="All Games" sort="DEFAULT" desc="False" layout="-1">
    <item type="SQL">
      <orderby><![CDATA[LOWER(title), title]]></orderby>
    </item>
  </Group>
  <Group title="Top Rated" sort="GRADE" desc="True" layout="-1">
    <item type="SQL">
      <orderby><![CDATA[grade DESC, LOWER(title), title LIMIT 10]]></orderby>
    </item>
  </Group>
  <Group title="Recently Played" sort="LASTPLAYED" desc="True" layout="-1">
    <item type="SQL">
      <where><![CDATA[playcount > 0]]></where>
      <orderby><![CDATA[latestplay DESC LIMIT 10]]></orderby>
    </item>
  </Group>
  <Group title="Developer" sort="DEFAULT" desc="False" layout="-1">
    <item type="Dynamic" column="Developer" />
  </Group>
  <Group title="Year" sort="DEFAULT" desc="False" layout="-1">
    <item type="Dynamic" column="Year" order="DESC" />
  </Group>
  <Group title="Genre" sort="DEFAULT" desc="False" layout="-1">
    <item type="Dynamic" column="Genre" />
  </Group>
</Groups>
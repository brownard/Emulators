<?xml version="1.0" encoding="utf-8"?>

<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\simple_dialog_menu.xaml"
    >
    <Include.Resources>

        <Model x:Key="ListDialogModel" Id="F140F32F-9F24-47D2-99B1-09A3A58D69FB"/>
        <!-- Dialog title -->
        <ResourceWrapper x:Key="Dialog_Header_Text" EnableBindings="True" Resource="{Binding Source={StaticResource ListDialogModel},Path=Header,Mode=OneTime}"/>

        <ResourceWrapper x:Key="Menu_Items" EnableBindings="True" Resource="{Binding Source={StaticResource ListDialogModel},Path=Items,Mode=OneTime}"/>

        <!-- Command -->
        <CommandStencil x:Key="Execute_Command_Stencil" Source="{StaticResource ListDialogModel}" Path="Select"/>
    </Include.Resources>
</Include>

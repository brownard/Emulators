<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\ShowItems.xaml"
    >
    <Include.Resources>

        <!-- Header -->
        <ResourceWrapper x:Key="Header_Text" Resource="[Emulators.Games]"/>

        <!-- Control template for the MediaItem details (cover, thumbs, duration, genres...)-->
        <ControlTemplate x:Key="Emulators_Details_Template">
            <Include Source="screens\GameItemDetails.inc"/>
        </ControlTemplate>

        <ControlTemplate x:Key="Emulators_List_Template">
            <ListView Style="{ThemeResource emuItemsListViewStyle}" DataContext="{Binding Source={StaticResource EmulatorsModel}}" CurrentItem="{Binding Path=FocusedItem, Mode=OneWayToSource}" ItemsSource="{Binding GamesList}">

                <ListView.Resources>
                    <Command x:Key="Menu_Command" Source="{StaticResource EmulatorsModel}" Path="SelectGame"
                    Parameters="{LateBoundValue BindingValue={Binding}}"/>
                </ListView.Resources>
            </ListView>
        </ControlTemplate>
        
    </Include.Resources>
</Include>
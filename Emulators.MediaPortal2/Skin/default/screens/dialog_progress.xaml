<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_dialog_bare.xaml"
    >
    <Include.Resources>

        <ControlTemplate x:Key="Progress_Template">
            <DockPanel Width="600" Height="80" LastChildFill="true" Margin="10">
                <ProgressBar x:Name="ProgressBar" DockPanel.Dock="Top" Height="15" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                  Value="{Binding Progress}" Margin="0,0,0,10"/>
                <Label Content="{Binding Info}" FontSize="{ThemeResource SmallFontSize}" Color="{ThemeResource TextColor}"/>
            </DockPanel>
        </ControlTemplate>

    </Include.Resources>
</Include>

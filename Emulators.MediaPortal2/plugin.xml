<Plugin
    DescriptorVersion="1.0"
    Name="Emulators"
    PluginId="{65F18961-497B-45F9-BD53-8CFE005F47EC}"
    AutoActivate="True"
    Author="Brownard"
    Copyright="GPL"
    Description="Emulators Plugin"
    PluginVersion="1.0">

  <DependsOn>
    <PluginReference PluginId="{D87D92F0-5E71-470a-A2A4-430F90A28BF3}"/>
    <!-- SkinEngine -->
    <PluginReference PluginId="{1AFF4467-64B0-4ca1-AF28-9AEDF3525BCE}"/>
    <!-- ConfigurationManager -->
    <PluginReference PluginId="{B765A4B6-F455-4941-BDAE-2CE45208BFEB}"/>
    <!-- Configuration plugin -->
  </DependsOn>

  <Runtime>
    <Assembly FileName="Emulators.MediaPortal2.dll"/>
    <Assembly FileName="Emulators.dll"/>
  </Runtime>

  <Register Location="/Models">
    <Model Id="3C370162-2586-416A-963C-F34DDDE184D4" Name="EmulatorsWorkflowModel" ClassName="Emulators.MediaPortal2.EmulatorsWorkflowModel"/>
    <Model Id="03F534A5-4495-4223-A7EB-0FC8D477CF4B" Name="NewEmulatorModel" ClassName="Emulators.MediaPortal2.NewEmulatorModel"/>
    <Model Id="2471F9F2-CAE1-4AEE-96BD-6647FF191F6E" Name="GameLaunchModel" ClassName="Emulators.MediaPortal2.GameLaunchWorkflowModel"/>
    <Model Id="F140F32F-9F24-47D2-99B1-09A3A58D69FB" Name="ListDialogModel" ClassName="Emulators.MediaPortal2.ListDialogModel"/>
  </Register>

  <Register Location="/Workflow/States">
    <WorkflowState Id="F1F446EC-03FD-4A22-BA04-7C45E6D72E06"
        Name="StartupView"
        WorkflowModel="3C370162-2586-416A-963C-F34DDDE184D4"
        MainScreen="emulators"
        DisplayLabel="Startup"
        Temporary="true" />

    <WorkflowState Id="97F9A2D9-B857-4890-9EF2-5E2BC66A53BB"
        Name="EmulatorsView" MainScreen="emulators" WorkflowModel="3C370162-2586-416A-963C-F34DDDE184D4"
        DisplayLabel="[Emulators.Emulators]"/>

    <WorkflowState Id="C69A5500-0059-4E4E-A331-2FD9835C4D0B"
            Name="NewEmulatorView" MainScreen="new_emulator" WorkflowModel="03F534A5-4495-4223-A7EB-0FC8D477CF4B"
            DisplayLabel="[Emulators.NewEmulator]"/>

    <DialogState Id="95639608-6CCC-4604-921C-AC34C4BFEFC5"
        Name="LaunchGame"
        DialogScreen="DialogLaunchGame"
        DisplayLabel="Launch"
        Temporary="true"
        WorkflowModel="2471F9F2-CAE1-4AEE-96BD-6647FF191F6E"/>
  </Register>

  <!-- Registration of our skin directory -->
  <Register Location="/Resources/Skin">
    <Resource Id="EmulatorsSkin" Directory="Skin" Type="Skin"/>
  </Register>

  <!-- Registration of our language directory -->
  <Register Location="/Resources/Language">
    <Resource Id="EmulatorsLanguage" Directory="Language" Type="Language"/>
  </Register>

  <!-- Registration of our configuration section -->  
  <Register Location="/Configuration/Settings/Plugins">
    <ConfigSection
        Id="EmulatorsPlugin"
        Redundant="true"
        Text="Emulators"/>
  </Register>

  
  <!-- Contents of '/Plugins/EmulatorsPlugin' section -->
  <Register Location="/Configuration/Settings/Plugins/EmulatorsPlugin">
    <ConfigSection
        Id="Emulators"
        Redundant="true"
        Text="Emulators"/>
    <ConfigSetting
        Id="EmulatorsStartupState"
        Text="Startup View"
        HelpText="View to show on first open"
        ClassName="Emulators.MediaPortal2.Settings.StartupStateSetting"/>
  </Register>
  <Register Location="/Configuration/Settings/Plugins/EmulatorsPlugin/Emulators">
    <CustomConfigSetting
        Id="CreateEmulator"
        Text="Create new Emulator"
        HelpText=""
        ClassName="Emulators.MediaPortal2.Settings.CreateEmulatorSetting"
        AdditionalData="WorkflowState=C69A5500-0059-4E4E-A331-2FD9835C4D0B,ConfAppPanel=..."/>
  </Register>
</Plugin>